    }

    .IT-interests ul li {
      width: 80%;
      padding-left: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.2rem;
    }

    .IT-interests ul li span {
      width: 100%;
      text-align: center;
    }
    .outer-bar {
      width: 80%;
    }
  }

  
  @media (min-width: 1024px) and (max-width: 1520px) {
    .info {
      padding: 0;
    }
    

    .info-container {
      width: 55%;
      margin-left: 0;
    }

    img {
      left: 20px;
    }

    .info-container.interests {
      width: 35%;
      margin-left: 2rem;
    }

    span.mobile {
      display: inline;
    }

    span.desktop {
      display: none;
    }
}
</style>
