<style>
  section {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;

    position: relative;
  }

  img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    border: 0.4rem solid #facc15;
    position: absolute;
    top: 10px;
    left: 80px;
  }

  .info-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #161616;
    border-radius: 10px;
    width: 45%;
    height: 70%;
    margin-top: 20px;
    margin-left: 80px;
    padding: 3rem 0rem 5rem 0rem;
  }

  .interests {
    width: 40%;
  }

  .interests > div {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .interests > div > span {
    color: #facc15;
    font-size: 2rem;
    padding: 1rem;
  }

  .interests ul {
    width: 80%;
  }

  li {
    margin: 0.3rem;
  }

  .info {
    width: 100%;
    padding: 0 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  span {
    color: #facc15;
    font-size: 2rem;
    padding: 1rem;
  }

  .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .container > div {
    height: 100%;
    margin-left: 40px;
  }

  .row {
    display: flex;
    flex-direction: row;
  }

  ul {
    margin: 0.3rem;
    color: white;
    font-size: 1.2rem;
    list-style: none;
  }

  ul > li > span {
    font-size: 1.2rem;
    margin: 0;
    padding: 0;
  }

  .container p {
    color: white;
    font-size: 1.2rem;
    width: 80%;
  }

  .opening-bracket {
    align-self: flex-start;
  }

  .closing-bracket {
    align-self: flex-end;
  }

  .soft-skills li {
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.8rem;
  }

  .soft-skill-icon {
    display: inline-block;
    width: 2rem;
    height: 2rem;
  }

  .soft-skill-icon svg {
    stroke: #facc15;
    fill: transparent;
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: draw 3s ease forwards;
    animation-iteration-count: infinite;
  }

  svg#icon-2 {
    animation-delay: 0.5s;
  }

  svg#icon-3 {
    animation-delay: 1s;
  }

  svg#icon-4 {
    animation-delay: 1.5s;
  }

  svg#icon-5 {
    animation-delay: 2s;
  }

  @keyframes draw {
    to {
      stroke-dashoffset: 0;
    }
  }

  .IT-interests li {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .IT-interests li span {
    font-size: 1.5rem;
    color: white;
    width: 250px;
  }

  .outer-bar {
    width: 30%;
    height: 0.8rem;
    border: 1px solid #facc15;
    border-radius: 10px;
    margin-top: 0.5rem;
    display: flex;
    align-items: center;
    padding: 0 0.2rem;
  }

  .inner-bar {
    border-radius: 10px;
    height: 0.3rem;
    background-color: #facc15;
    width: 50%;
    animation: fill 2.5s ease forwards;
  }

  @keyframes fill {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }

  .mobile {
    display: none;
  }

  @media (max-width: 767px) {
    section {
      flex-direction: column;
      margin-bottom: 5rem;
    }

    .info-container {
      width: 80%;
      margin: 3rem 0 0 0;
      padding: 0;
      background-color: transparent;
    }

    .info-container > img {
      display: none;
    }

    .container p {
      width: 100%;
      text-align: center;
    }

    .row {
      margin-top: 1rem;
      gap: 1rem;
      flex-direction: column;
    }

    .container {
      width: 100%;
    }

    .row .container > div {
      margin-left: 0;
    }

    .interests {
      width: 100%;
      gap: 2rem;
    }

    .soft-skills {
      margin: 0 auto;
      align-items: center;
    }

    .soft-skills ul {
      margin-top: 1rem;
      width: 80%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .soft-skills li {
      width: 70%;
      margin: 0 auto;
      font-size: 1.2rem;
      text-align: center;
    }

    .IT-interests {
      margin-top: 2rem;
    }

    .IT-interests > span {
      font-size: 1rem;
    }

    .desktop {
      display: none;
    }

    .mobile {
      display: inline;
      margin: 0;
      padding: 0;
    }

    .IT-interests ul {
      width: 80%;
      margin: 0 auto;
      margin-top: 1rem;
      display: flex;
      flex-direction: column;
      align-self: center;
      gap: 1.5rem;
    }

    .IT-interests ul li {
      width: 80%;
      padding-left: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.2rem;
    }

    .IT-interests ul li span {
      width: 100%;
      text-align: center;
    }
    .outer-bar {
      width: 80%;
    }
  }

  @media (min-width: 768px) and (max-width: 1023px){
    section {
      flex-direction: column;
