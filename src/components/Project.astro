---
const { slug, data } = Astro.props;
---

<div class="project">
  <a href={`/projects/${slug}`}>
    <img
      src={`../${data.image}`}
      alt={`${data.title} project image`}
      transition:name={`img-${slug}`}
    />
    <div>
      <span class="project-title">
        {data.title}
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
          ><title>arrow-top-right-thick</title><path
            d="M8.5,18.31L5.69,15.5L12.06,9.12H7.11V5.69H18.31V16.89H14.89V11.94L8.5,18.31Z"
          ></path></svg
        >
      </span>
      <p>
        {data.shortDescription}
      </p>
    </div>
  </a>
</div>

<style>
  .project {
    width: 45%;
    display: flex;
    padding: 1px;
    border-radius: 15px;
    background-color: #0a0a0a;
    flex-direction: column;
    height: fit-content;
    color: white;
    cursor: pointer;
    background-color: #161616;
    transition: all 0.1s linear;
  }

  .project > a {
    text-decoration: none;
    line-height: 1.4;
    padding: 1.5rem;
    border-radius: 8px;
    color: white;
    opacity: 0.8;
    display: flex;
    flex-direction: row;
  }

  .project > a > div {
    display: flex;
    flex-direction: column;
    margin-left: 1rem;
  }

  .project img {
    align-self: center;
    width: 150px;
    height: 150px;
    border-radius: 8px;
  }

  .project span {
    margin: 0;
    font-size: 1.5rem;
    font-weight: bold;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    display: flex;
    align-items: center;
  }

  .project svg {
    fill: white;
    width: 1.2rem;
    height: 1.2rem;
    margin-left: 0.5rem;
    transition: all 0.1s linear;
  }

  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    font-size: 1.2rem;
  }

  .project:is(:hover, :focus-within) {
    background-color: #242424;
  }

  .project:is(:hover, :focus-within)svg {
    fill: #facc15;
    transform: translateX(0.15rem) translateY(-0.15rem);
  }

  .project:is(:hover, :focus-within) span {
    color: #facc15;
  }

  @media (max-width: 767px) {
    .project {
      width: 100%;
      margin-bottom: 1rem;
    }

    .project a {
      width: 90%;
      padding: 2rem 1rem;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .project-title {
      padding-top: 1.5rem;
      margin: 0 auto;
      display: flex;
      justify-content: center;
    }

    p {
      padding-top: 0.2rem;
      text-align: center;
      margin: 0 auto;
    }
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    .project {
      width: 80%;
      margin-bottom: 1rem;
    }

    .project a {
      width: 90%;
      padding: 2rem 1rem;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .project-title {
      padding-top: 1.5rem;
      margin: 0 auto;
      display: flex;
      justify-content: center;
    }

    p {
      padding-top: 0.2rem;
      text-align: center;
      margin: 0 auto;
    }
  }
</style>
