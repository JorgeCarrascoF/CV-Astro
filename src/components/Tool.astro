---
const { data } = Astro.props;
console.log(data)
---

<div class="tool">
  <div>
    <img src={`/tools/${data.img}`}>

    <h3>{data.title}</h3>
    <span class="confidence"
      >{"★".repeat(data.confidence)}<span class="unconfidence">
        {"★".repeat(5 - data.confidence)}</span
      >
    </span>
  </div>
  <p class="description">{data.description}</p>
</div>
<style>
  .tool {
    width: 25%;
    display: flex;
    color: white;
    background-color: #161616;
    z-index: 0;
    padding: 8px 15px;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
    /* From https://css.glass */
    border-radius: 5px;
    backdrop-filter: blur(4.8px);
    -webkit-backdrop-filter: blur(4.8px);
  }

  img {
    width: 1.8rem;
    fill: #facc25;
  }

  .tool div {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .tool h3 {
    margin: 5px 0;
    font-size: 1.2rem;
  }

  .tool span {
    display: inline-block;
  }

  span.confidence {
    color: #facc25;
  }
  span.unconfidence {
    color: white;
  }

  .description {
    position: absolute;
    border-top: none;
    background: #242424;
    color: white;
    text-align: center;
    width: calc(100% - 3rem);
    left: 0;
    font-size: 1.1rem;
    display: none;
    z-index: 15;
    padding: 1rem 1.5rem;
    margin-top: 2.5rem;
    border-radius: 0 0 5px 5px;
  }

  .tool:hover {
    border-radius: 5px 5px 0 0;
    background-color: #242424;
    z-index: 10;
  }

  .tool:hover .description {
    display: block;
  }

  @media (max-width: 767px) {
    .tool {
      width: 70%;
    }
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    .tool {
      width: 35%;
    }
  }

  
  @media (min-width: 1024px) and (max-width: 1520px) {
    .tool {
      width: 40%;
    }
  }
</style>
